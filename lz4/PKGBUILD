# Maintainer: SÃ©bastien Luttringer

pkgname=lz4
epoch=1
pkgver=1.9.2
pkgrel=1
pkgdesc='Extremely fast compression algorithm'
arch=('arm64')
url='http://www.lz4.org/'
license=('GPL2')
source=("$pkgname-$pkgver.tar.gz::https://github.com/lz4/lz4/archive/v$pkgver.tar.gz")
md5sums=('3898c56c82fb3d9455aefd48db48eaad')

prepare() {
  cd $pkgname-$pkgver
  sed -i 's/\<ln -s\>/ln -sf/g' Makefile.inc
}

build() {
  cd $pkgname-$pkgver

  TARGET_OS=Darwin \
    make \
    PREFIX=/usr \
    CFLAGS="${CFLAGS}"
}

package() {
  cd $pkgname-$pkgver
  TARGET_OS=Darwin \
    make install \
    CFLAGS="${CFLAGS}" \
    PREFIX=/usr \
    DESTDIR="$pkgdir"
  TARGET_OS=Darwin \
    make install \
    CFLAGS="${CFLAGS}" \
    PREFIX=/usr \
    DESTDIR="${BBS_BASE}"

  find $pkgdir -type f -exec ldid -S${BBS_EXTRA}/general.xml {} \; &> /dev/null    
  find $pkgdir -name '.ldid*' -type f -delete
}

# vim:set ts=2 sw=2 et:
